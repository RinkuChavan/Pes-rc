@model IEnumerable<SubCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-success">Sub Categories</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
        <br />
        <br />
        <div>
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border" style="width:auto">
                    <tr class="table-secondary">
                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                        <th>@Html.DisplayNameFor(m => m.Category.Name)</th>
                        <th></th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {

                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Category.Name)
                    </td>
                    <td>
                        <partial name="_TableButtonPartial" model="item.Id" />
                    </td>
                </tr>

                    }
                </table>
            }
            else
            {
                <p class="text-info text-center">No Sub Categoriy Exists.........</p>
            }

        </div>

    </div>
</div>

